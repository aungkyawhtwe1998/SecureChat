<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUi.ProfileActivity">
    <include
        android:id="@+id/toolbar1"
        layout="@layout/bar_layout"/>
    <LinearLayout
        android:layout_below="@id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_below="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtP"
            android:gravity="center_horizontal"
            android:fontFamily="@font/space_mono_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="30sp"
            android:textColor="#fff"/>
        <androidx.cardview.widget.CardView
            android:layout_below="@id/txtP"
            android:id="@+id/ppcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="20dp"
            android:padding="5dp"
            android:layout_margin="20dp">
            <RelativeLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/colorPrimaryDark"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/profile_frag_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_user_profile"/>
                <TextView
                    android:fontFamily="@font/space_mono_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:layout_below="@+id/profile_frag_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/profile_username"
                    android:textSize="18sp"/>
                <TextView
                    android:fontFamily="@font/space_mono_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_username"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/profile_email"
                    android:text="email"
                    android:textSize="18sp"
                    android:layout_marginBottom="40dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/profile_email"
                    android:layout_margin="5dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimaryDark"
                    app:cardElevation="2dp"
                    android:padding="3dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/colorPrimaryDark">
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/RippleStyleGrey"
                        >
                        <Button
                            android:backgroundTint="#fff"
                            android:fontFamily="@font/space_mono_bold"
                            android:background="@drawable/bgcorner"
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Logout"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:id="@+id/btn_logout"
                            android:textSize="20sp"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>




</RelativeLayout>